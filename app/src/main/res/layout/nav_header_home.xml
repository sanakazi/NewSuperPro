<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"

    android:background="@color/navigation_blue_bg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.superapp.custom.CircularNetworkImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/ivProfileImage"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/small_profile"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.5"
        android:layout_marginBottom="@dimen/dimen_5"/>
        <ProgressBar
            android:id="@+id/progressBarDrawerIv"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textSize="@dimen/txt_15"
            android:text="Mr.Donald Dsilva"
            android:id="@+id/tvName"
            android:textColor="@color/white"
            android:textStyle="bold"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_12"
            android:textAllCaps="true"
            android:text="Project owner"
            android:id="@+id/tvWork"
            android:textColor="@color/navigation_blue_headers"
            />
    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:background="@color/navigation_blue_divider" />

<!--<View
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/navigation_blue_divider"/>-->


</LinearLayout>
