<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:layout_margin="@dimen/dimen_3"
        card_view:cardCornerRadius="@dimen/dimen_0">



        <RelativeLayout
            android:layout_gravity="center"
            android:padding="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/txt_header2"
                android:textSize="@dimen/txt_15"
                android:text="UPCOMING TASKS"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:visibility="gone"
              />

            <com.superapp.custom.CircularTextView
                android:layout_below="@id/label"
                android:id="@+id/circularTextView1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:minLines="2"
                android:padding="@dimen/dimen_10"

                android:text="22nd Nov"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_12" />

            <TextView
                android:gravity="center"
                android:id="@+id/milestone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label"
                android:layout_toRightOf="@id/circularTextView1"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/font_blue"
                android:text="Kitchen " />

            <TextView
                android:gravity="center"
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/label"
                android:textSize="@dimen/txt_15"
                android:textColor="@color/project_completed_status"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textStyle="bold"
                android:text="100% " />

            <TextView
                android:gravity="center"
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/percent"
                android:layout_below="@id/label"
                android:textSize="@dimen/tab_label"
                android:textColor="@color/project_completed_status"
                android:text="Completed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/milestone_name"
                android:layout_alignLeft="@id/milestone_name">

                <com.superapp.custom.CircularTextView
                    android:id="@+id/circularTextView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:layout_alignBottom="@id/label_total_task"
                    android:layout_marginRight="@dimen/dimen_10" />

                <TextView
                    android:gravity="center"
                    android:layout_toRightOf="@id/circularTextView2"
                    android:id="@+id/label_total_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tab_label"
                    android:textColor="@color/txt_header1"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:text="Total task" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_total_task"
                    android:layout_toRightOf="@id/label_total_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tab_label"
                    android:textColor="@color/txt_header1"
                    android:textStyle="bold"
                    android:text="5" />

                <View
                    android:id="@+id/view"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/circularTextView2"
                    android:minHeight="@dimen/dimen_50"
                    android:background="@color/txt_header2"/>

                <com.superapp.custom.CircularTextView
                    android:id="@+id/circularTextView3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:minLines="2"
                    android:padding="@dimen/dimen_10"
                    android:layout_below="@id/view"
                    android:layout_marginRight="@dimen/dimen_10"
                    />

                <TextView
                    android:layout_toRightOf="@id/circularTextView3"
                    android:gravity="center"
                    android:id="@+id/label_completed_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tab_label"
                    android:textColor="@color/txt_header1"
                    android:layout_below="@id/view"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:text="Completed task" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_completed_task"
                    android:layout_toRightOf="@id/label_completed_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tab_label"
                    android:textColor="@color/txt_header1"
                    android:layout_below="@id/view"
                    android:textStyle="bold"
                    android:text="3" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>