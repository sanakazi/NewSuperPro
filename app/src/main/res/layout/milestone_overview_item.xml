<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/txt_header2"
        android:textSize="@dimen/txt_15"
        android:text="TASKS"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:visibility="gone"

        />


    <RelativeLayout
        android:id="@+id/milestone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_3"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5"
        android:layout_below="@id/label">

        <com.superapp.custom.CircularTextView
            android:id="@+id/circularTextView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:minLines="2"
            android:padding="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:text="22nd Nov"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12" />

        <TextView
            android:id="@+id/milestone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@id/circularTextView1"
            android:layout_marginBottom="@dimen/dimen_5"
            android:gravity="center"
            android:text="Furniture "
            android:textColor="@color/font_blue"
            android:textSize="@dimen/txt_15" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            android:gravity="center"
            android:text="Ongoing "
            android:layout_alignBottom="@id/milestone_name"
            android:textColor="@color/project_completed_status"
            android:textSize="@dimen/txt_15" />


        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/milestone_name"
            android:layout_below="@+id/milestone_name"
            android:layout_marginRight="@dimen/dimen_15"
            android:gravity="left"
            android:text="Total task bfjkdbfjbdjfb  fjdjfkjdkfkd hdh fdfi dsfid hfhdfh  dfiohdsofsdf "
            android:textColor="@color/txt_header2"
            android:textSize="@dimen/tab_label" />


        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_desc"
            android:layout_alignLeft="@id/milestone_name">

            <com.superapp.custom.CircularNetworkImageView
                android:id="@+id/img_client"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/small_profile"
                android:layout_marginRight="@dimen/dimen_5"/>

            <TextView
                android:gravity="center"
                android:id="@+id/txt_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_client"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textColor="@color/txt_header1"
                android:text="Mr. Donal Dsilva "
                android:textSize="@dimen/label_size"/>

            <TextView
                android:gravity="center"
                android:id="@+id/txt_client_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_client"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_below="@id/txt_client_name"
                android:textAllCaps="true"
                android:textColor="@color/txt_header2"
                android:text="TEAM MEMBER"
                android:textSize="@dimen/label_size"/>


            <ImageView
                android:id="@+id/img_call"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@mipmap/call"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>